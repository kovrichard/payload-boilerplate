{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": false,
    "lineEnding": "lf",
    "lineWidth": 90,
    "attributePosition": "auto",
    "includes": ["**", "!**/payload-types.ts", "!**/importMap.js"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noArrayIndexKey": "warn"
      }
    },
    "domains": {
      "next": "recommended"
    },
    "includes": ["**", "!**/payload-types.ts", "!**/importMap.js"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
